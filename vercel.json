{
  "version": 2,
  "builds": [
    {
      "src": "backend/src/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/src/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/dist/$1"
    }
  ],
  "installCommand": "npm install --prefix backend && npm install --prefix frontend && npm run build --prefix frontend",
  "buildCommand": "npm run build --prefix backend",
  "outputDirectory": "frontend/dist"
}